@* fully qualified the model name in order to prevent name collisions in larger applications *@
@model IEnumerable<Rocky.Models.Category>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category Name</th>
                <th>Display Order</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td width="30%">@category.Id</td>
                    <td width="50%">@category.Name</td>
                    <td width="30%">@category.DisplayOrder</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No category exists.</p>
}