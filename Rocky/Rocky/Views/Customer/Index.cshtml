@model IEnumerable<Rocky.Models.Customer>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td width="20%">@customer.Id</td>
                    <td width="40%">@customer.FirstName</td>
                    <td width="40%">@customer.LastName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No customers found.</p>
}